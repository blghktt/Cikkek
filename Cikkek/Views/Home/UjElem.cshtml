@model Cikkek.Models.Product
@using System.Collections

<meta charset="utf-8">

@using (Html.BeginForm())
{
    <div>
        <p>
            @Html.LabelFor(m => m.Cikknev)
            @Html.TextBoxFor(m => m.Cikknev)
        </p>
        
    </div>

    <div>
        <p>
            
            @Html.LabelFor(m => m.Cikkszam)
            @if (ViewContext.RouteData.GetRequiredString("action") == "Szerkeszt")
            {
                @Html.DisplayFor(m => m.Cikkszam);
            }
            @if (ViewContext.RouteData.GetRequiredString("action") == "UjElem")
            {
                @Html.TextBoxFor(m => m.Cikkszam)
            }


        </p>
    </div>

    <div>
        <p>
            @Html.LabelFor(m => m.Vonalkod)
            @Html.TextBoxFor(m => m.Vonalkod)
        </p>
    </div>

    <div>
        <p>
            @Html.LabelFor(m => m.MennyisegiEgyseg)
            @Html.DropDownListFor(m => m.MennyisegiEgyseg, new SelectList(
            new List<Object>
                {
               "darab",
                "Pár" ,
                 "Csomag",
                 "méter"
                }))
</p>
    </div>

    <div>
        <p>
            <button type="submit" class="btn btn-default">Mentés</button>
         </p>
    </div>
    
}
